<MudTextField Label="Name" @bind-Value="Name" />

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Next">Next</MudButton>

@code {
    [Parameter] public EventCallback<string> NameChanged { get; set; }
    [Parameter] public EventCallback NextStep { get; set; }

    private string? Name;

    private async Task Next()
    {
        await NameChanged.InvokeAsync(Name);
        await NextStep.InvokeAsync();
    }
}
